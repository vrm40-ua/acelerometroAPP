<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AcelerÃ³metro"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"/>

    <!-- Tarjeta para el Eje X -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eje X"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/color_axis_x"/>

            <TextView
                android:id="@+id/xAxisValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="-9.81"
                android:textSize="22sp"
                android:textColor="@color/color_axis_x"
                android:fontFamily="monospace"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tarjeta para el Eje Y -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eje Y"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/color_axis_y"/>

            <TextView
                android:id="@+id/yAxisValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.05"
                android:textSize="22sp"
                android:textColor="@color/color_axis_y"
                android:fontFamily="monospace"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tarjeta para el Eje Z -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eje Z"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/color_axis_z"/>

            <TextView
                android:id="@+id/zAxisValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.98"
                android:textSize="22sp"
                android:textColor="@color/color_axis_z"
                android:fontFamily="monospace"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
